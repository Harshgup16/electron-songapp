{
  "name": "mysong",
  "productName": "SoulSync",
  "version": "1.0.0",
  "description": "A pastel-themed Electron music player",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win"
  },
  "devDependencies": {
    "electron": "latest",
