  },
  "build": {
    "appId": "com.harshgupta.soulsync",
    "productName": "SoulSync",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "assets/SoulSync.ico",
      "target": "nsis"
    }
  }
}
