* {
  box-sizing: border-box;
}

body {
  margin: 0;
  width: 100vw;
  height: 100vh;
  user-select: none;
  -webkit-app-region: drag;
  border-radius: 28px;
  background: transparent;
  font-family: "Pixeboy", "Trebuchet MS", sans-serif;
  overflow: hidden;
}

.app {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

button,
input,
textarea,
select {
  -webkit-app-region: no-drag;
  cursor: pointer;
  font-family: inherit;
}

.player {
  width: 13.2rem;
  padding: 0.85rem 0.85rem 1rem;
  border-radius: 1.5rem;
  background: radial-gradient(circle at top, rgba(255, 236, 255, 0.9), rgba(195, 163, 255, 0.65));
  border: 2px solid rgba(200, 155, 255, 0.8);
  box-shadow: 0 20px 40px rgba(98, 61, 140, 0.35);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.6rem;
}
.player.is-playing .hearts {
  animation: heart-bounce 1.2s ease-in-out infinite;
}

.player.is-playing .hearts span {
  animation: heart-pop 1.2s ease-in-out infinite;
}

.player.is-playing .hearts span:nth-child(2) {
  animation-delay: 0.2s;
}

.player.is-playing .hearts span:nth-child(3) {
  animation-delay: 0.4s;
}

.player-title {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0.25rem 0.6rem;
  width: 100%;
  max-width: 12rem;
  border-radius: 999px;
  border: 1px solid rgba(192, 121, 255, 0.85);
  background: rgba(210, 164, 255, 0.45);
  color: #fff;
  font-size: 0.8rem;
  text-align: center;
  letter-spacing: 0.02rem;
  text-shadow: 0 2px 6px rgba(128, 94, 170, 0.6);
}

.player-frame {
  width: 100%;
  border-radius: 1.5rem;
  padding: 0.7rem;
  background: linear-gradient(180deg, rgba(248, 233, 255, 0.95), rgba(206, 174, 255, 0.65));
  border: 1.5px solid rgba(216, 188, 255, 0.75);
  box-shadow: inset 0 0 0 2px rgba(255, 255, 255, 0.35);
  display: flex;
  flex-direction: column;
  gap: 0.7rem;
  align-items: center;
}

.art-card {
  width: 100%;
  border-radius: 1.2rem;
  overflow: hidden;
  background: linear-gradient(160deg, rgba(255, 219, 241, 0.8), rgba(188, 170, 255, 0.6));
  border: 2px solid rgba(184, 133, 255, 0.65);
  box-shadow: 0 10px 22px rgba(114, 88, 156, 0.25);
}

.art-header {
  height: 0.7rem;
  background: linear-gradient(90deg, rgba(246, 217, 255, 0.8), rgba(210, 184, 255, 0.9));
}

.art-scene {
  position: relative;
  height: 7.2rem;
  padding: 0.45rem;
}

.scene-sky {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(255, 211, 225, 0.95), rgba(184, 191, 255, 0.9));
}

.scene-horizon {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 1.6rem;
  height: 1.8rem;
  background: linear-gradient(180deg, rgba(188, 212, 255, 0.9), rgba(170, 190, 255, 0.9));
}

.scene-trees {
  position: absolute;
  left: 0.8rem;
  bottom: 2rem;
  width: 7.5rem;
  height: 2.4rem;
  background: radial-gradient(circle at 10% 80%, rgba(170, 190, 230, 0.7), transparent 55%),
    radial-gradient(circle at 40% 70%, rgba(150, 180, 220, 0.8), transparent 55%),
    radial-gradient(circle at 70% 75%, rgba(160, 190, 230, 0.75), transparent 55%),
    radial-gradient(circle at 90% 80%, rgba(150, 180, 220, 0.8), transparent 55%);
}

.scene-window {
  position: absolute;
  left: 0.8rem;
  right: 0.8rem;
  bottom: 0.35rem;
  height: 0.6rem;
  border-radius: 1rem;
  background: rgba(255, 232, 255, 0.55);
  border: 1px solid rgba(240, 210, 255, 0.8);
  box-shadow: inset 0 0 0 2px rgba(255, 255, 255, 0.6);
}
.progress-bar::after {
  content: "";
  position: absolute;
  left: 0.2rem;
  top: 0.12rem;
  height: 0.3rem;
  width: 38%;
  border-radius: 999px;
  background: linear-gradient(90deg, rgba(214, 184, 255, 0.9), rgba(255, 231, 248, 0.95));
  box-shadow: 0 0 8px rgba(200, 160, 255, 0.6);
}

.scene-cat {
  position: absolute;
  right: 1.2rem;
  bottom: 0.55rem;
  width: 1.3rem;
  height: 0.9rem;
  background: #4d3b5c;
  border-radius: 0.9rem 0.9rem 0.4rem 0.4rem;
  box-shadow: 0 -0.25rem 0 0 #4d3b5c;
}

.scene-cat::before,
.scene-cat::after {
  content: "";
  position: absolute;
  top: -0.3rem;
  width: 0.35rem;
  height: 0.35rem;
  background: #4d3b5c;
  border-radius: 0.2rem;
}

.scene-cat::before {
  left: 0.2rem;
  transform: rotate(15deg);
}

.scene-cat::after {
  right: 0.2rem;
  transform: rotate(-15deg);
}

.controls {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 0.35rem;
}

.playlist {
  width: 100%;
  border-radius: 0.9rem;
  padding: 0.45rem 0.5rem 0.55rem;
  background: rgba(255, 240, 255, 0.75);
  border: 1px solid rgba(200, 155, 255, 0.6);
  box-shadow: inset 0 0 0 2px rgba(255, 255, 255, 0.6);
}

.playlist-title {
  font-size: 0.7rem;
  color: #8f6abf;
  margin-bottom: 0.25rem;
  text-align: center;
}

.playlist-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: grid;
  gap: 0.2rem;
  max-height: 3.2rem;
  overflow: hidden;
}

.playlist-item {
  font-size: 0.65rem;
  color: #6b4fa4;
  padding: 0.2rem 0.35rem;
  border-radius: 0.5rem;
  background: rgba(255, 255, 255, 0.6);
  border: 1px solid rgba(210, 180, 255, 0.5);
  cursor: pointer;
}

.playlist-item.is-active {
  background: rgba(210, 184, 255, 0.9);
  color: #ffffff;
}

.controls-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.controls-row.primary {
  justify-content: center;
  gap: 0.8rem;
}

.icon-button {
  width: 1.6rem;
  height: 1.6rem;
  border-radius: 0.8rem;
  border: 1px solid rgba(192, 121, 255, 0.7);
  background: rgba(255, 240, 255, 0.7);
  color: #8f6abf;
  font-size: 0.8rem;
  display: grid;
  place-items: center;
  box-shadow: inset 0 0 0 2px rgba(255, 255, 255, 0.6);
}

.play-button {
  width: 2.1rem;
  height: 2.1rem;
  border-radius: 999px;
  border: 2px solid rgba(174, 122, 255, 0.8);
  background: rgba(255, 255, 255, 0.85);
  color: #8a64c3;
  font-size: 0.95rem;
  display: grid;
  place-items: center;
  box-shadow: 0 6px 12px rgba(146, 102, 201, 0.35), inset 0 0 0 3px rgba(255, 255, 255, 0.7);
}

.play-button[data-state="playing"] {
  background: rgba(220, 190, 255, 0.9);
}

.menu-button {
  padding: 0.2rem 0.7rem;
  border-radius: 999px;
  border: 1px solid rgba(192, 121, 255, 0.7);
  background: rgba(255, 238, 255, 0.7);
  color: #8f6abf;
  font-size: 0.7rem;
  box-shadow: inset 0 0 0 2px rgba(255, 255, 255, 0.6);
}

.hearts {
  display: flex;
  gap: 0.2rem;
  color: #a36edc;
  font-size: 0.65rem;
}

@keyframes heart-bounce {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-2px);
  }
}

@keyframes heart-pop {
  0%,
  100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.2);
  }
}


.menu-overlay {
  position: fixed;
  inset: 0;
  display: grid;
  place-items: center;
  background: rgba(120, 90, 165, 0.35);
  backdrop-filter: blur(6px);
  z-index: 10;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.18s ease;
}

.menu-overlay.is-open {
  opacity: 1;
  pointer-events: auto;
}

.menu-popup {
  width: min(12.5rem, 85vw);
  background: rgba(255, 240, 255, 0.95);
  border-radius: 1rem;
  border: 1px solid rgba(200, 155, 255, 0.6);
  box-shadow: 0 16px 32px rgba(90, 60, 130, 0.35);
  padding: 0.6rem;
  transform: scale(0.92);
  opacity: 0;
  transition: transform 0.18s ease, opacity 0.18s ease;
}

.menu-overlay.is-open .menu-popup {
  transform: scale(1);
  opacity: 1;
}

.menu-popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 0.4rem;
}

.menu-popup-title {
  font-size: 0.8rem;
  color: #7a56b2;
}

.menu-close {
  border: none;
  background: rgba(230, 210, 255, 0.6);
  color: #7a56b2;
  width: 1.4rem;
  height: 1.4rem;
  border-radius: 0.4rem;
  font-size: 0.75rem;
}

.menu-popup-body .playlist-list {
  max-height: 6rem;
  overflow: auto;
}
